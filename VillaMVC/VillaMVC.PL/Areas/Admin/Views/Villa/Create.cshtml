@model VillaVM

<div class="card-body">
    <form asp-area="Admin" asp-controller="Villa" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" id="inputEmail" />
            <label for="inputEmail">Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="AdressInfo" class="form-control" />
            <label for="inputEmail">AdressInfo</label>
            <span asp-validation-for="AdressInfo" class="text-danger"></span>

        </div>

        <div class="form-floating mb-3">
            <input asp-for="Price" type="number" class="form-control" />
            <label for="inputEmail">Price</label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="BedroomCount" type="number" class="form-control" />
            <label for="inputEmail">BedroomCount</label>
            <span asp-validation-for="BedroomCount" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="BathroomCount" type="number" class="form-control" />
            <label for="inputEmail">BathroomCount</label>
            <span asp-validation-for="BathroomCount" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Floor" type="number" class="form-control" />
            <label for="inputEmail">Parking</label>
            <span asp-validation-for="Parking" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Parking" type="number" class="form-control" />
            <label for="inputEmail">Parking</label>
            <span asp-validation-for="Parking" class="text-danger"></span>
        </div>

         <div class="form-floating mb-3">
            <input asp-for="AreaSize" type="number" class="form-control" />
            <label for="inputEmail">Area Size</label>
            <span asp-validation-for="AreaSize" class="text-danger"></span>
        </div>

        <div>
            <input asp-for="File" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <button class="btn btn-primary" type="submit">Create</button>
        </div>
    </form>
</div>