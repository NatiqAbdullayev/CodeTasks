@model CourseVM

<div class="card-body">
    <form asp-area="Admin" asp-controller="Course" asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="form-floating mb-3">
            <input asp-for="Name" class="form-control" id="inputEmail" />
            <label for="inputEmail">Name</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="CategoryName" class="form-control" />
            <label for="inputEmail">Description</label>
            <span asp-validation-for="CategoryName" class="text-danger"></span>

        </div>

        <div class="form-floating mb-3">
            <input asp-for="Price" type="number" class="form-control" />
            <label for="inputEmail">Price</label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="TeacherName"  class="form-control" />
            <label for="inputEmail">Teacher name</label>
            <span asp-validation-for="TeacherName" class="text-danger"></span>
        </div>

        <div>
            <input asp-for="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <button class="btn btn-primary" type="submit">Update</button>
        </div>
    </form>
</div>